{
  "name": "xtouch",
  "version": "1.0.0",
  "description": "简单易用的触摸库",
  "keywords": [
    "touch",
    "gesture",
    "tap"
  ],
  "license": "MIT",
  "repository": "https://github.com/leonwgc/xtouch",
  "bugs": {
    "url": "https://github.com/leonwgc/xtouch/issues"
  },
